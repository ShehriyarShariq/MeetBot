<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grayishBlue</item>
        <item name="colorPrimaryDark">@color/grayishBlue</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/grayishBlue</item>
        <item name="colorControlActivated">@color/grayishBlue</item>
    </style>

</resources>
