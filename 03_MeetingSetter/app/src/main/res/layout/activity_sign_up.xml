<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBG"
        tools:context=".view.SignUpActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <View
                android:id="@+id/gap01"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H, 1:0.133"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/signUpTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="@color/darkPurple"
                android:textSize="28sp"
                app:layout_constraintTop_toBottomOf="@+id/gap01" />

            <View
                android:id="@+id/gap02"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H, 1:0.347"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gap02"
                app:layout_constraintWidth_percent="0.778">

                <androidx.cardview.widget.CardView
                    android:id="@+id/firstNameInpLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:cardCornerRadius="27.5dp"
                    app:layout_constraintDimensionRatio="H, 1:0.162"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/firstNameInp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/white"
                        android:hint="First Name"
                        android:inputType="text"
                        android:textSize="18sp"
                        app:errorEnabled="false" />

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/gap03"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H, 1:0.05"
                    app:layout_constraintTop_toBottomOf="@+id/firstNameInpLayout" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/lastNameInpLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:cardCornerRadius="27.5dp"
                    app:layout_constraintDimensionRatio="H, 1:0.162"
                    app:layout_constraintTop_toBottomOf="@+id/gap03">

                    <EditText
                        android:id="@+id/lastNameInp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/white"
                        android:hint="Last Name"
                        android:inputType="text"
                        android:textSize="18sp"
                        app:errorEnabled="false" />

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/gap04"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H, 1:0.05"
                    app:layout_constraintTop_toBottomOf="@+id/lastNameInpLayout" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/emailInpLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:cardCornerRadius="27.5dp"
                    app:layout_constraintDimensionRatio="H, 1:0.162"
                    app:layout_constraintTop_toBottomOf="@+id/gap04">

                    <EditText
                        android:id="@+id/emailInp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/white"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textSize="18sp"
                        app:errorEnabled="false" />

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/gap05"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H, 1:0.05"
                    app:layout_constraintTop_toBottomOf="@+id/emailInpLayout" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/passwordInpLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:cardCornerRadius="27.5dp"
                    app:layout_constraintDimensionRatio="H, 1:0.162"
                    app:layout_constraintTop_toBottomOf="@+id/gap05">

                    <EditText
                        android:id="@+id/passInp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/white"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textSize="18sp"
                        app:errorEnabled="false" />

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/gap06"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H, 1:0.093"
                    app:layout_constraintTop_toBottomOf="@+id/passwordInpLayout" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/signUpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H, 1:0.162"
                    app:cardBackgroundColor="@color/darkPurple"
                    app:cardCornerRadius="27.5dp"
                    app:layout_constraintTop_toBottomOf="@+id/gap06">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="Sign Up"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:id="@+id/gap07"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H, 1:0.043"
                    app:layout_constraintTop_toBottomOf="@+id/signUpBtn" />

                <TextView
                    android:id="@+id/orTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Or"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/gap07"/>

                <View
                    android:id="@+id/gap08"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H, 1:0.054"
                    app:layout_constraintTop_toBottomOf="@+id/orTxt" />

                <RelativeLayout
                    android:id="@+id/googleSignUpBtnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H, 1:0.162"
                    app:layout_constraintTop_toBottomOf="@+id/gap08">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        app:cardBackgroundColor="@color/googlePlusSignUpBtnColor"
                        app:cardCornerRadius="4dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/googleIc"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginLeft="15dp"
                                android:background="@color/white"
                                android:src="@drawable/ic_google"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="W, 1:1"
                                app:layout_constraintHeight_percent="0.6"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/divider1"
                                android:layout_width="2dp"
                                android:layout_height="0dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="5dp"
                                android:background="@color/darkGray"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHeight_percent="0.6"
                                app:layout_constraintLeft_toRightOf="@+id/googleIc"
                                app:layout_constraintRight_toLeftOf="@+id/signUpWithGoogleTxt"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/signUpWithGoogleTxt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="12dp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:text="Sign up with Google plus"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                app:layout_constraintLeft_toRightOf="@+id/divider1"
                                app:layout_constraintRight_toRightOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.gms.common.SignInButton
                        android:id="@+id/googleSignUpBtn"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                </RelativeLayout>

                <View
                    android:id="@+id/gap09"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H, 1:0.054"
                    app:layout_constraintTop_toBottomOf="@+id/googleSignUpBtnLayout" />

                <RelativeLayout
                    android:id="@+id/facebookSignUpBtnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H, 1:0.162"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/gap09">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/facebookSignUpBtnColor"
                        app:cardCornerRadius="4dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/facebookIc"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginLeft="15dp"
                                android:background="@color/white"
                                android:src="@drawable/ic_facebook"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="W, 1:1"
                                app:layout_constraintHeight_percent="0.6"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/divider2"
                                android:layout_width="2dp"
                                android:layout_height="0dp"
                                android:layout_marginLeft="20dp"
                                android:background="@color/darkGray"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHeight_percent="0.6"
                                app:layout_constraintLeft_toRightOf="@+id/facebookIc"
                                app:layout_constraintRight_toLeftOf="@+id/signUpWithFacebookTxt"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/signUpWithFacebookTxt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:text="Sign up with Facebook"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                app:layout_constraintLeft_toRightOf="@+id/divider2"
                                app:layout_constraintRight_toRightOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/facebookSignUpBtn"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingTop="32dp" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</layout>