<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBG"
        tools:context=".view.SignUpActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/signUpTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="@color/darkPurple"
                android:textSize="32sp"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signUpTxt"
                app:layout_constraintWidth_percent="0.85">

                <androidx.cardview.widget.CardView
                    android:id="@+id/firstNameInpLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:cardCornerRadius="27.5dp">

                    <EditText
                        android:id="@+id/firstNameInp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:backgroundTint="@color/white"
                        android:hint="First Name"
                        android:inputType="text"
                        android:textSize="22sp"
                        app:errorEnabled="false" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/lastNameInpLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="27.5dp">

                    <EditText
                        android:id="@+id/lastNameInp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:backgroundTint="@color/white"
                        android:hint="Last Name"
                        android:inputType="text"
                        android:textSize="22sp"
                        app:errorEnabled="false" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/emailInpLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="27.5dp">

                    <EditText
                        android:id="@+id/emailInp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:backgroundTint="@color/white"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textSize="22sp"
                        app:errorEnabled="false" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/passwordInpLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="27.5dp">

                    <EditText
                        android:id="@+id/passInp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:backgroundTint="@color/white"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textSize="22sp"
                        app:errorEnabled="false" />

                </androidx.cardview.widget.CardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/signUpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/darkPurple"
                    app:cardCornerRadius="27.5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:padding="11dp"
                        android:text="Sign Up"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Or"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        app:cardBackgroundColor="@color/googlePlusSignUpBtnColor"
                        app:cardCornerRadius="4dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/googleIc"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:src="@drawable/ic_google"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="W, 1:1"
                                app:layout_constraintHeight_percent="0.6"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/divider1"
                                android:layout_width="2dp"
                                android:layout_height="0dp"
                                android:layout_marginLeft="20dp"
                                android:background="@color/darkGray"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHeight_percent="0.6"
                                app:layout_constraintLeft_toRightOf="@+id/googleIc"
                                app:layout_constraintRight_toLeftOf="@+id/signUpWithGoogleTxt"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/signUpWithGoogleTxt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="12dp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center"
                                android:padding="12dp"
                                android:text="Sign up with Google plus"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                app:layout_constraintLeft_toRightOf="@+id/divider1"
                                app:layout_constraintRight_toRightOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.gms.common.SignInButton
                        android:id="@+id/googleSignUpBtn"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/facebookSignUpBtnColor"
                        app:cardCornerRadius="4dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/facebookIc"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:src="@drawable/ic_facebook"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="W, 1:1"
                                app:layout_constraintHeight_percent="0.6"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/divider2"
                                android:layout_width="2dp"
                                android:layout_height="0dp"
                                android:layout_marginLeft="20dp"
                                android:background="@color/darkGray"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHeight_percent="0.6"
                                app:layout_constraintLeft_toRightOf="@+id/facebookIc"
                                app:layout_constraintRight_toLeftOf="@+id/signUpWithFacebookTxt"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/signUpWithFacebookTxt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center"
                                android:padding="12dp"
                                android:text="Sign up with Facebook"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                app:layout_constraintLeft_toRightOf="@+id/divider2"
                                app:layout_constraintRight_toRightOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/facebookSignUpBtn"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingTop="32dp" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</layout>